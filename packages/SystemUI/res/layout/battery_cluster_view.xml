<com.android.systemui.statusbar.policy.BatteryController
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:orientation="vertical">

    	<FrameLayout
	    android:id="@+id/battery_combo"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:paddingLeft="4dp"
		>    
    
 		<RelativeLayout
 			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

 		<ImageView
			android:id="@+id/battery_circle"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="right"
			android:visibility="gone" /> 		
  		    
   		<ImageView
			android:id="@+id/battery"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="right"
			android:visibility="gone" />
		
			
		<ImageView
			android:id="@+id/battery_color"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="right"
			android:visibility="gone" />

		<ImageView
			android:id="@+id/battery_number"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_gravity="right"
			android:visibility="gone" />
		
		
		<ImageView
			android:id="@+id/battery_horiz_bar_bottom_off"
			android:layout_below="@id/battery"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:visibility="gone" />		
						
		<ImageView
			android:id="@+id/battery_horiz_bar_bottom"
			android:layout_below="@id/battery"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:visibility="gone" />
		
		
		<ImageView
			android:id="@+id/battery_vert_bar_off"
			android:layout_toRightOf="@id/battery"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignBottom ="@id/battery"
			android:visibility="gone" />
		
		<ImageView
			android:id="@+id/battery_vert_bar_right"
			android:layout_toRightOf="@id/battery"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignBottom ="@id/battery"
			android:visibility="gone" />
				
		<ImageView
			android:id="@+id/charge_icon"
			android:layout_toRightOf="@id/battery"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_alignBottom ="@id/battery"
			android:visibility="gone" />	
		
</RelativeLayout>
	
	</FrameLayout>		
	


    	
    	
</com.android.systemui.statusbar.policy.BatteryController>
